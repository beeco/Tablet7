<LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/BottomRelativeFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

    <Button  
        android:id="@+id/Button01"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:text="@string/button_restart_text"
        android:maxHeight="104dp"
        android:background="@color/white"
        android:textSize="38dp"
        android:textColor="@color/blue"
        android:typeface="sans"
        android:onClick="onRestartButton"></Button>
    
        <Button  
        android:id="@+id/Button02"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:text="@string/button_check_text"
		android:layout_marginLeft="20dp"
        android:maxHeight="104dp"
        android:background="@color/white"
        android:textSize="38dp"
        android:textColor="@color/blue"
        android:typeface="sans"
        android:onClick="onCheckButton"></Button> 
        </LinearLayout>
    
        